# ============================================================
# Terraform Variables - Template
# Copier ce fichier vers terraform.tfvars et ajuster les valeurs
# ============================================================

# Région AWS
aws_region = "us-east-1"

# Environnement
environment = "production"  # dev, staging, production

# Configuration VPC
vpc_cidr = "10.0.0.0/16"

availability_zones = [
  "us-east-1a",
  "us-east-1b",
  "us-east-1c"
]

public_subnet_cidrs = [
  "10.0.101.0/24",
  "10.0.102.0/24",
  "10.0.103.0/24"
]

private_subnet_cidrs = [
  "10.0.1.0/24",   # AFOR
  "10.0.2.0/24",   # CVGFR
  "10.0.3.0/24",   # PREFET
  "10.0.4.0/24"    # Orderer
]

# Types d'instances EC2
peer_instance_type    = "t3.large"    # 2 vCPU, 8GB RAM
orderer_instance_type = "t3.xlarge"   # 4 vCPU, 16GB RAM

# AMI Ubuntu 22.04 LTS
# ⚠️ Vérifier l'AMI pour votre région: https://cloud-images.ubuntu.com/locator/ec2/
ubuntu_ami_id = "ami-0c7217cdde317cfec"  # us-east-1, Ubuntu 22.04 LTS

# Clé SSH
# ⚠️ Créer la clé d'abord: aws ec2 create-key-pair --key-name afor-blockchain-key
key_name = "afor-blockchain-key"

# Sécurité
# ⚠️ IMPORTANT: Restreindre ces CIDR en production !
admin_cidr_blocks = [
  "0.0.0.0/0"  # ⚠️ À CHANGER: Remplacer par votre IP publique
]

# Exemples de restriction:
# admin_cidr_blocks = [
#   "203.0.113.10/32",  # IP bureau
#   "198.51.100.5/32"   # IP VPN
# ]

# Monitoring
enable_detailed_monitoring = true

# Backups
backup_retention_days = 30

# Tags supplémentaires (optionnel)
# tags = {
#   CostCenter = "IT-Blockchain"
#   Owner      = "DevOps Team"
#   Compliance = "RGPD"
# }
