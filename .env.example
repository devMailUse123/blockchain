# ============================================================================
# CONFIGURATION RÉSEAU FABRIC 3.1.1 - CÔTE D'IVOIRE
# ============================================================================
# Copier ce fichier en .env et adapter les valeurs à votre environnement

# ----------------------------------------------------------------------------
# VERSIONS
# ----------------------------------------------------------------------------
FABRIC_VERSION=3.1.1
FABRIC_CA_VERSION=1.5.15
COUCHDB_VERSION=3.3.2

# ----------------------------------------------------------------------------
# DOMAINE ET RÉSEAU
# ----------------------------------------------------------------------------
DOMAIN=foncier.ci
NETWORK_NAME=foncier

# ----------------------------------------------------------------------------
# ORGANISATIONS
# ----------------------------------------------------------------------------
ORG1_NAME=AFOR
ORG2_NAME=CVGFR
ORG3_NAME=PREFET

# ----------------------------------------------------------------------------
# PORTS - ORDERER
# ----------------------------------------------------------------------------
ORDERER_PORT=7050
ORDERER_ADMIN_PORT=7053
ORDERER_OPERATIONS_PORT=9443

# ----------------------------------------------------------------------------
# PORTS - PEERS
# ----------------------------------------------------------------------------
# AFOR
PEER_AFOR_PORT=7051
PEER_AFOR_CHAINCODE_PORT=7052
PEER_AFOR_OPERATIONS_PORT=9447

# CVGFR
PEER_CVGFR_PORT=8051
PEER_CVGFR_CHAINCODE_PORT=8052
PEER_CVGFR_OPERATIONS_PORT=9448

# PREFET
PEER_PREFET_PORT=9051
PEER_PREFET_CHAINCODE_PORT=9052
PEER_PREFET_OPERATIONS_PORT=9449

# ----------------------------------------------------------------------------
# PORTS - FABRIC CA
# ----------------------------------------------------------------------------
CA_AFOR_PORT=7054
CA_CVGFR_PORT=8054
CA_PREFET_PORT=9054
CA_ORDERER_PORT=10054

# ----------------------------------------------------------------------------
# PORTS - COUCHDB
# ----------------------------------------------------------------------------
COUCHDB_AFOR_PORT=5984
COUCHDB_CVGFR_PORT=6984
COUCHDB_PREFET_PORT=7984

# ----------------------------------------------------------------------------
# COUCHDB CREDENTIALS
# ----------------------------------------------------------------------------
# ⚠️  CHANGER CES VALEURS EN PRODUCTION ⚠️
COUCHDB_USER=admin
COUCHDB_PASSWORD=adminpw

# ----------------------------------------------------------------------------
# API REST
# ----------------------------------------------------------------------------
API_PORT=3000
API_HOST=0.0.0.0
API_LOG_LEVEL=info
API_JWT_SECRET=change-this-in-production-to-a-strong-secret
API_CORS_ORIGIN=*

# ----------------------------------------------------------------------------
# CHAINCODE
# ----------------------------------------------------------------------------
CHAINCODE_NAME=contrats-fonciers
CHAINCODE_VERSION=1.0
CHAINCODE_SEQUENCE=1
CHAINCODE_LANGUAGE=java

# ----------------------------------------------------------------------------
# CHANNEL
# ----------------------------------------------------------------------------
CHANNEL_NAME=contrats-fonciers

# ----------------------------------------------------------------------------
# LOGGING
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
FABRIC_LOGGING_SPEC=INFO
CORE_CHAINCODE_LOGGING_LEVEL=INFO

# ----------------------------------------------------------------------------
# FABRIC CA ADMIN
# ----------------------------------------------------------------------------
# ⚠️  CHANGER CES VALEURS EN PRODUCTION ⚠️
CA_ADMIN_NAME=admin
CA_ADMIN_PASSWORD=adminpw

# ----------------------------------------------------------------------------
# MONITORING (OPTIONNEL)
# ----------------------------------------------------------------------------
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=false
METRICS_PORT=9443

# ----------------------------------------------------------------------------
# TLS
# ----------------------------------------------------------------------------
FABRIC_TLS_ENABLED=true

# ----------------------------------------------------------------------------
# DOCKER
# ----------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=foncier-blockchain
DOCKER_SOCK=/var/run/docker.sock
