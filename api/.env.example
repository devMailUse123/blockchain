# Configuration du serveur API
PORT=3000
NODE_ENV=development

# Configuration Hyperledger Fabric
CHANNEL_NAME=contrat-agraire
CHAINCODE_NAME=foncier
CHAINCODE_VERSION=4.0

# Organisation par défaut
DEFAULT_ORG=afor
DEFAULT_USER=Admin

# Chemins des certificats (relatifs au projet)
CRYPTO_PATH=/home/absolue/my-blockchain/network/organizations
CONNECTION_PROFILE_PATH=/home/absolue/my-blockchain/api/config/connection-profile.json

# Configuration de sécurité
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/api.log
